{
  "name": "web",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "bundle": "esbuild ./app.js --bundle --format=esm --platform=browser --define:global=globalThis --splitting --outdir=./dist --entry-names=[name] --chunk-names=chunks/[name]-[hash] --metafile=./dist/meta.json",
    "copy-z3": "mkdir -p ./dist/z3 && cp ./node_modules/z3-solver/build/z3-built.js ./node_modules/z3-solver/build/z3-built.wasm ./dist/z3/",
    "build": "npm run bundle && node ./update-preload.mjs && npm run copy-z3",
    "build:deploy": "npm run build && node ./assemble-site.mjs",
    "start": "node ./serve.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "z3-solver": "^4.15.4"
  },
  "devDependencies": {
    "esbuild": "^0.24.0"
  }
}
